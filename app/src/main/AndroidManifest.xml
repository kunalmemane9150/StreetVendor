<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sesy36.streetvendor">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StreetVendor">
        <activity
            android:name=".menuVendor.vendorTodaysMenu"
            android:exported="false" />
        <activity
            android:name=".Profile.EditProfileCustomerActivity"
            android:exported="false" />
        <activity
            android:name=".Profile.EditProfileVendorActivity"
            android:exported="false" />
        <activity
            android:name=".AllShopsActivity"
            android:exported="false" />
        <activity
            android:name=".Chat.ChatUserActivity"
            android:exported="false" />
        <activity
            android:name=".Chat.ChatActivity"
            android:exported="false" />
        <activity android:name=".ShopDetailsActivity" />
        <activity
            android:name=".MainVendorActivity"
            android:exported="false" />
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FragmentReplacerActivity"
            android:exported="false" />
        <activity
            android:name=".MainCustomerActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>